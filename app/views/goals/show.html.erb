<% if @goal.user_id != current_user.id && @goal.privacy %>

<p>This goal is private</p>

<% else %>

<h1><%= @goal.title %></h1>

<p><%= @goal.description %></p>

  <% if @goal.completion %>
    <%= "Goal Completed!" %>
  <% else %>
    <%= "Goal in Progress!" %>
  <% end %>
  
<% end %>

<% if current_user.id == @goal.id %>
  <%= link_to "Update Goal", edit_goal_url(@goal) %>
  <%= button_to "Remove Goal", goal_url(@goal), method: :delete %>
<% end %>

<% @goal.comments.each do |comment| %>
  <%= comment.body %>
   <%= button_to "Remove Comment", goal_comment_url(comment), method: :delete %>
<% end %>

<form action="<%= goal_comments_url %>" method="POST">
  <%= auth_token %>
  <label>Comment
    <textarea name="comment[body]"></textarea>
  </label>
  
  <input type="hidden" name="comment[goal_id]" value="<%= @goal.id %>">
  
  <input type="submit" value="Add Comment">
</form>